
reset: clean cp build

init: ready_hw first

ready_hw:
	ethtool -A eth0 autoneg off rx off tx off
	mknod /dev/net/cnet c 10 201
	echo 1 > /proc/sys/net/ipv4/ip_forward

first: cp build

cp:
	cp $(TRANS_DIR)/* $(TEST_DIR)

clean:
	rm cos_loader
	rmmod cnet
	rmmod cos

build: 
	insmod cos.ko
	insmod cnet.ko
	./cnet_user
